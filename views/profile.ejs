            $('#termsOfService').modal('show');
        });
        $('#PrivacynPolicyButton').on('click', function() {
            let text = document.getElementById("modalTitle");
            text.innerHTML = "Privacy and Policy";
            $('#termsOfService').modal('show');
        });
        $('#notificationButton').on('click', function(){
            $('#notification').modal('show');
        })
        $('#logoutButton').on('click', function(){
            $('#logout').modal('show');
        })
        $('#changePasswordButton').on('click', function(){
            $('#changePassword').modal('show');
        })
        $('#ratingButton').on('click', function(){
            $('#rating').modal('show');
        })
        $('.rating-stars .star').click(function() {
            var starIndex = $(this).index();
            var isActive = $(this).hasClass('active');

            $('.rating-stars .star').removeClass('active');

            for (var i = 0; i <= starIndex; i++) {
                var star = $('.rating-stars .star:eq(' + i + ')');
                star.addClass('active');
            }

            if (isActive) {
                for (var i = starIndex + 1; i < $('.rating-stars .star').length; i++) {
                    var star = $('.rating-stars .star:eq(' + i + ')');
                    star.removeClass('active');
                }
            }
        });


    </script>
